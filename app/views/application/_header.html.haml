#header
  %ul.nav.nav-pills.pull-right
    - if current_user
      %li{class: controller_name == 'users' ? 'active' : nil}
        = link_to t(:users), users_path
      %li{class: controller_name == 'dialogs' ? 'active' : nil}
        = link_to t(:dialogs), dialogs_path
      %li= link_to t(:sign_out), destroy_user_session_path
    - else
      %li{class: controller_name == 'sessions' ? 'active' : nil}
        = link_to t(:sign_in), new_user_session_path
      %li{class: controller_name == 'registrations' ? 'active' : nil}
        = link_to t(:sign_up), new_user_registration_path
  .clearfix